{
  "name": "bgg_assist",
  "version": "1.0.0",
  "description": "Electron app to allow quick lookup for bgg posts",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:css": "postcss src/styles.css -o src/tailwind.css",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.boolean.bgg_assist",
    "win": {
      "target": "nsis"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/phoroszowski/bgg_assist.git"
  },
  "keywords": [
    "board",
    "game",
    "bgg",
    "forum"
  ],
  "author": "Peter Horoszowski",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/phoroszowski/bgg_assist/issues"
  },
  "homepage": "https://github.com/phoroszowski/bgg_assist#readme",
  "dependencies": {
    "koffi": "^2.9.0",
    "node-gyp-build": "^4.8.1",
    "node-key-sender": "^1.0.11",
    "postcss-cli": "^11.0.0",
    "ref-napi": "^3.0.3",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "electron": "^31.4.0",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.41",
    "tailwindcss": "^3.4.10"
  }
